<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abdoh.popularmoviestage2.MainActivity"
    android:background="#3c3f41">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/POSTERS_ERROR"
        android:textSize="30sp"
        android:visibility="invisible"
        android:text="@string/error_loading_message"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_bookmarks"
        android:textSize="30sp"
        android:visibility="invisible"
        android:text="@string/no_bookmarks"/>


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/posters_progress_bar"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/posters_list"

        />

</FrameLayout>
